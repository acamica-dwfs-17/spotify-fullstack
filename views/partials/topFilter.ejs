<form class="w-100">
  <div class="row">
    <div class="col col-xs-12 col-lg-6">
      <div class="form-group">
        <label for="time-range">Time Range</label>
        <select
          class="form-control"
          id="time-range"
          name="range"
        >
          <option <%= range === "long_term" ? 'selected' : ''%> value="long_term">Long Term</option>
          <option <%= range === "medium_term" ? 'selected' : ''%> value="medium_term">Medium Term</option>
          <option <%= range === "short_term" ? 'selected' : ''%> value="short_term">Short Term</option>
        </select>
      </div>
    </div>
    <div class="col col-xs-12 col-lg-6">
      <div class="form-group">
        <label for="limit">Limit</label>
        <input
          id="number"
          type="number"
          value="<%= limit %>"
          min="1"
          max="50"
          class="form-control"
          name="limit"
        />
      </div>
     <div class="d-flex justify-content-end">
      <button class="btn btn-primary">
        Apply
      </button>
     </div>
    </div>
  </div>
</form>
